<p style="color: green"><%= notice %></p>

<div class="buttons">
  <%= button_to "New Post", new_post_path, method: :get %>
  <%= button_to "Sign Up", new_user_registration_path, method: :get %>
  <%  if user_signed_in? %>
    <%= button_to "Log out", destroy_user_session_path, method: :delete %>
  <% end %>
</div>

<h1 class="title is-1" style="text-align: center;">Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>   
  <% end %>
</div>
<br />

